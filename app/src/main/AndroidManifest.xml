<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.babbq.conference2015" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="nl.babbq.conference2015.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/abstractions_logo_background"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.babbq.conference2015.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.babbq.conference2015.ConferenceActivity"
            android:label="@string/title_activity_conference" >
        </activity>
        <activity
            android:name="com.mikepenz.aboutlibraries.ui.LibsActivity"
            android:label="@string/title_activity_conference" >
        </activity>
        <activity
            android:name="nl.babbq.conference2015.AboutActivity"
            android:label="@string/action_about" >
        </activity>
        <activity
            android:name="nl.babbq.conference2015.AuthorsActivity"
            android:label="@string/action_authors" >
        </activity>
    </application>

</manifest>
